{
    "name": "pyang",
    "displayName": "pyang",
    "version": "0.7.0",
    "publisher": "sid-sharma",
    "description": "YANG Language Support using pyang",
    "author": {
        "name": "Siddharth Sharma",
        "email": "siddharth.sharma@ericsson.com"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters",
        "Visualization",
        "Snippets"
    ],
    "keywords": [
        "YANG",
        "pyang",
        "markdown-it",
        "markdown-it-plugin"
    ],
    "pricing": "Free",
    "engines": {
        "vscode": "^1.65.0"
    },
    "license": "MIT",
    "activationEvents": [
        "onLanguage:yang",
        "onCommand:pyang.client.restart"
    ],
    "main": "./dist/extension",
    "contributes": {
        "languages": [
            {
                "id": "yang",
                "aliases": [
                    "YANG",
                    "yang"
                ],
                "extensions": [
                    ".yang"
                ],
                "configuration": "./yang.language-configuration.json"
            },
            {
                "id": "yangtree",
                "aliases": [
                    "YANG Tree Diagram",
                    "yangtree"
                ],
                "extensions": [
                    ".yangtree",
                    ".yang.tree",
                    ".ytd"
                ],
                "icon": {
                    "dark": "./resources/yangtree.svg",
                    "light": "./resources/yangtree.svg"
                },
                "configuration": "./yangtree.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yang",
                "scopeName": "source.yang",
                "path": "./syntaxes/yang.tmLanguage.json"
            },
            {
                "scopeName": "markdown.yang.codeblock",
                "path": "./syntaxes/yang.codeblock.json",
                "injectTo": [
                    "text.html.markdown"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.yang": "yang"
                }
            },
            {
                "scopeName": "markdown.yangtree.codeblock",
                "path": "./syntaxes/yangtree.codeblock.json",
                "injectTo": [
                    "text.html.markdown"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.yangtree": "yangtree"
                }
            },
            {
                "language": "yangtree",
                "scopeName": "source.yangtree",
                "path": "./syntaxes/yangtree.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "pyang.client.restart",
                "title": "Restart Language Server",
                "category": "pyang"
            },
            {
                "command": "pyang.editor.tree.diagram",
                "title": "Generate YANG Tree Diagram",
                "enablement": "editorLangId == yang",
                "category": "pyang"
            },
            {
                "command": "pyang.editor.puml.diagram",
                "title": "Generate PlantUML Diagram",
                "enablement": "editorLangId == yang",
                "category": "pyang"
            }
        ],
        "keybindings": [
            {
                "command": "pyang.editor.tree.diagram",
                "key": "alt+y t",
                "when": "editorFocus && editorLangId == yang",
                "description": "Generate YANG Tree Diagram",
                "primary": true
            },
            {
                "command": "pyang.editor.puml.diagram",
                "key": "alt+y u",
                "when": "editorFocus && editorLangId == yang",
                "description": "Generate PlantUML Diagram",
                "primary": true
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "pyang.editor.tree.diagram",
                    "when": "editorLangId == yang",
                    "group": "pyang"
                },
                {
                    "command": "pyang.editor.puml.diagram",
                    "when": "editorLangId == yang",
                    "group": "pyang"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "pyang",
            "properties": {
                "pyang.cli.args": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Extra `pyang` CLI arguments, above already provided `--verbose --lsp --no-env-path`.\n\nThis allows for tuning of LSP server defaults, providing search paths, and provisioning of `pyang` plugins, for example.\n\n**NOTE**: Takes effect at editor reload."
                },
                "pyang.trace.server": {
                    "scope": "resource",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "LSP trace level."
                },
                "pyang.debug.server.enable": {
                    "scope": "machine-overridable",
                    "type": "boolean",
                    "default": false,
                    "description": "LSP is used via TCP socket, instead of stdio."
                },
                "pyang.debug.server.host": {
                    "scope": "machine",
                    "type": "string",
                    "default": "127.0.0.1",
                    "description": "LSP Server Host, when LSP is used via TCP socket."
                },
                "pyang.debug.server.port": {
                    "scope": "machine",
                    "type": "number",
                    "default": 2087,
                    "description": "LSP Server Port, when LSP is used via TCP socket."
                }
            }
        },
        "snippets": [
            {
                "language": "yang",
                "path": "./snippets/yang.snippets.json"
            }
        ],
        "markdown.markdownItPlugins": true
    },
    "extensionKind": [
        "workspace"
    ],
    "extensionDependencies": [
        "jebbs.plantuml"
    ],
    "dependencies": {
        "@types/vscode": "^1.89.0",
        "markdown-it": "^14.1.0",
        "markdown-it-highlightjs": "^4.2.0",
        "vscode-languageclient": "^7.0.0"
    },
    "icon": "resources/pyang.png",
    "scripts": {
        "compile": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "vscode:prepublish": "tsc",
        "package": "npm run check-types && node esbuild.js --production",
        "build": "vsce package",
        "test": "vscode-test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/esmasth/pyang-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/esmasth/pyang-vscode/issues"
    },
    "devDependencies": {
        "@eslint/js": "^9.6.0",
        "@types/markdown-it": "^14.1.2",
        "@types/node": "^20.14.2",
        "@typescript-eslint/parser": "^5.0.1",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "esbuild": "^0.25.0",
        "eslint": "^8.57.0",
        "globals": "^15.8.0",
        "prettier": "^3.1.0",
        "prettier-eslint": "^16.1.2",
        "typescript": "^4.4.4",
        "typescript-eslint": "^7.15.0"
    }
}
